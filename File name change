
get-childitem *.txt | foreach { rename-item $_ $_.Name.Replace("Splitted -", "") }


get-childitem *.txt
#list all txt files in the directory, which is then attached to another function "foreach" with | operator.

foreach { rename-item $_ $_.Name.Replace("Splitted -", "") }

